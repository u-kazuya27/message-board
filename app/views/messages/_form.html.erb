<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="message_name" class="control-label col-sm-2">名前:</label>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
 <br>
 <br>
  <div class="form-group">
  <label class="col-sm-2 control-label" for="message_body">内容:</label>
  <div class="col-sm-10">
    <%= f.text_area :body, class:"form-control" %>
  </div>
</div>
 <br>
 <br>
  <div class="form-group">
  <label class="col-sm-2 control-label" for="message_body">年齢:</label>
  <div class="col-sm-10">
    <%= f.text_field :age, class:"form-control" %>
  </div>
</div>
 <br>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>